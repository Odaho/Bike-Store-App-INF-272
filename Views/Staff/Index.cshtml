@model IEnumerable<BikeStoreApp.Models.staffs>
@{
    ViewBag.Title = "Staff Members";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-wrapper">
    <div class="container-fluid px-4 py-4">
        <div class="dashboard-header-enhanced mb-4">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h2 class="fw-bold mb-1 text-dark">Staff Members</h2>
                    <p class="text-muted mb-0"><i class="bi bi-person-badge"></i> Manage store staff</p>
                </div>
            </div>
        </div>

        <div class="professional-card">
            <div class="card-body-pro">
                @foreach (var s in Model)
                {
                    <div class="data-row">
                        <div class="d-flex align-items-center gap-3">
                            <div class="avatar-pro bg-blue">@s.first_name.Substring(0, 1)@s.last_name.Substring(0, 1)</div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1 name-text">@s.first_name @s.last_name</h6>
                                <div class="detail-text"><i class="bi bi-envelope me-1"></i>@s.email</div>
                                <div class="detail-text"><i class="bi bi-telephone me-1"></i>@s.phone</div>
                                <div class="detail-text"><i class="bi bi-shop me-1"></i>@s.stores.store_name</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
