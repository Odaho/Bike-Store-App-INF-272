@model IEnumerable<BikeStoreApp.Models.products>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-wrapper">
    <div class="container-fluid px-4 py-4">
        <div class="dashboard-header-enhanced mb-4">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h2 class="fw-bold mb-1 text-dark">Products</h2>
                    <p class="text-muted mb-0"><i class="bi bi-box-seam"></i> Browse and manage product catalog</p>
                </div>
            </div>
        </div>

        <div class="professional-card">
            <div class="card-body-pro">
                @foreach (var p in Model)
                {
                    <div class="data-row product-row">
                        <div class="d-flex align-items-center gap-3">
                            @{
                                string imagePath = !string.IsNullOrEmpty(p.image_url)
                                    ? Url.Content(p.image_url)
                                    : Url.Content("~/Content/Images/default-bike.jpeg");
                            }
                            <div class="product-image-wrapper" style="width:70px; height:70px; border-radius:10px; overflow:hidden;">
                                <img src="@imagePath" alt="@p.product_name" style="width:100%; height:100%; object-fit:cover;" />
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1 name-text">@p.product_name</h6>
                                <div class="detail-text"><i class="bi bi-tag me-1"></i>@p.brands.brand_name</div>
                                <div class="detail-text"><i class="bi bi-grid-3x3-gap me-1"></i>@p.categories.category_name</div>
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <span class="year-badge">@p.model_year</span>
                                    <span class="price-pro">R @p.list_price.ToString("N2")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
